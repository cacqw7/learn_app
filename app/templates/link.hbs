<div id="links" class="container">
  <h1 class="display-3">Links <button type="button" class="btn btn-primary-outline">Primary</button></h1>

  <div class="list-group">
    {{#each model as |link|}}
      <a class="list-group-item" href="{{link.url}}">
        <div class="media">
          <div class="media-left">
            <img class="media-object link-thumbnail" src="{{link.thumbnail_url}}" alt="{{link.title}}" />
          </div>
          <div class="media-body">
            <h4>{{ link.title }}</h4>
            {{ link.description }}
          </div>
        </div>
      </a>
    {{/each}}
  </div>
</div>


{{outlet}}
