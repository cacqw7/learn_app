{{#if session.currentUser}}
  <div class="container">
    <h4>{{#link-to 'links'}}Links{{/link-to}}</h4>
  </div>

{{else}}
  {{#if error}}
    <div class="alert alert-danger col-md-4 col-md-offset-4 col-lg-4 col-lg-offset-4 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1 col-xl-4 col-xl-offset-4" role="alert">
      {{error}}
    </div>
  {{/if}}
  {{github-login login=(action "signInViaGithub") }}
{{/if}}
